{
  "name": "tooling-ready-starter-kit",
  "version": "1.0.0",
  "description": "A modern JavaScript starter kit with best practices and professional tooling",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "qa": "npm run lint && npm run format:check && npm run type-check && npm run test",
    "qa:fix": "npm run lint:fix && npm run format && npm run type-check",
    "prepare": "husky install",
    "clean": "rm -rf dist node_modules/.vite",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "vite": "^4.3.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.8",
    "vitest": "^0.32.0",
    "@vitest/ui": "^0.32.0",
    "c8": "^7.14.0",
    "typescript": "^5.1.3",
    "@types/node": "^20.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "javascript",
    "es6",
    "modules",
    "vite",
    "eslint",
    "prettier",
    "starter-kit",
    "modern-js"
  ],
  "author": "JavaScript Learning Path",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}